<div class="card card-body">
  <h3>Create a new event</h3>
  <form action="#" method="post">   <!--to complete -->
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" value="{{name}}" required >
    </div>

    <div class="form-group">
      <table>
        <tr>
          <td>
            <label for="date">Date</label>
          </td>
          <td>
            <label for="time">Time</label>
          </td>
          <td>
            <label for="name">Location</label>
          </td>
        </tr>
        <tr>
          <td>
            <input type="date" class="form-control" name="date" value="{{date}}" required >
          </td>
          <td>
            <input type="time" class="form-control" name="time" value="{{time}}" required >
          </td>
          <td>
            <input type="text" class="form-control" name="location" value="{{location}}" required >
          </td>
        </tr>
      </table>
    </div>

    <div class="form-group">
      <label for="details">details</label>
      <textarea class="form-control" name="details" ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-danger">reset</button>
  </form>
</div>
